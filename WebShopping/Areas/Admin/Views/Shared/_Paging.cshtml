@model WebShopping.Models.Paginate;

<div class="container">
	@if(Model.TotalPages > 0)
	{
		<ul class="pagination justify-content-end">
			@if (Model.CurrentPage > 1)
			{
				<li class="page-item">
					<a asp-action="Index" asp-route-pg="1" class="page-link">First</a>
				</li>
				<li class="page-item">
					<a asp-action="Index" asp-route-pg="@(Model.CurrentPage-1)" class="page-link">Previous</a>
				</li>
			}
			@for(var pae = Model.StartPage;pae <= Model.EndPage; pae++)
			{
				<li class="page-item @(pae == Model.CurrentPage ? "active" : "")">
					<a class="page-link" asp-action="Index" asp-route-pg="@pae">@pae</a>
				</li>
			}
			@if(Model.CurrentPage < Model.TotalPages)
			{
				<li class="page-item">
					<a class="page-link" asp-action="Index" asp-route-pg="@(Model.CurrentPage+1)">Next</a>
				</li
				<li class="page-item">
					<a class="page-link" asp-action="Index" asp-route-pg="@(Model.TotalPages)">Last</a>
				</li>
			}
		</ul>
	}
</div>