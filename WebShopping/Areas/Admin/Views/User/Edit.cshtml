@model AppUserModel
@{
	ViewData["title"] = "Create User";
}
<h3>Edit User</h3>
<div class="col-md-9">
	<form asp-action="Edit" enctype="multipart/form-data">
		<input type="hidden" asp-for="Id"/>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>User Name</label>
			<input asp-for="UserName" required class="form-control" />
			<span asp-validation-for="UserName" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Email</label>
			<input asp-for="Email" class="form-control"></input>
			<span asp-validation-for="Email" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Phone</label>
			<input asp-for="PhoneNumber" required class="form-control"></input>
			<span asp-validation-for="PhoneNumber" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Password</label>
			<input asp-for="PasswordHash" readonly class="form-control"></input>
			<span asp-validation-for="PasswordHash" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Role</label>
			<select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
				<option>Choose a Role</option>
			</select>
			<span asp-validation-for="RoleId" class="text-danger" />
		</div>
		<div class="form-group">
			<button class="btn btn-primary">Update</button>
		</div>
	</form>
	<a asp-action="Index">Back to list</a>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
