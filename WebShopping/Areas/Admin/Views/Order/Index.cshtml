@model IEnumerable<OrderModel>
@{
	ViewData["Title"] = "Đơn Hàng";
}

<h3>List Order</h3>

<table class="table-hover" id="mytablee">
	<thead>
		<tr>
			<th scope="col">Order Code</th>
			<th scope="col">User Name </th>
			<th scope="col">Order Status</th>
			<th scope="col">Order Date</th>
			<th scope="col">Action</th>

		</tr>
	</thead>
	<tbody>

		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.OrderCode</th>
				<td>@item.UserName</td>
				<td>
					@if (@item.Status == 1)
					{
						<span class="text text-success">Đơn hàng mới</span>
					}
					else
					{
						<span class="text text-danger">Đơn hàng thành công</span>
					}
				</td>
				<td>@item.CreateDate</td>
				<td>
					<a asp-action="ViewOrder" class="btn btn-primary btn-sm" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View details</a>
					<a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Order" asp-route-Id="@item.Id">Delete</a>
				</td>
			</tr>

		}
	</tbody>
</table>
@section Scripts {
	<script>
		let table = new DataTable('#mytablee');
	</script>
}